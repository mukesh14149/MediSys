<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.example.mukesh.medisys.Home_Page">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_pic"
        android:layout_width="@dimen/doublecent"
        android:layout_height="@dimen/doublecent"
        android:layout_centerHorizontal="true"
        app:civ_border_width="@dimen/two"
        app:civ_border_color="@color/light_black"
        android:src="@drawable/default_icon"
        />

    <Button
        android:id="@+id/select_image"
        android:layout_marginTop="@dimen/double_seventy"
        android:layout_marginLeft="@dimen/negative_sixty"
        style="@style/select_profile"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/negative_ten"
        android:layout_marginLeft="@dimen/seventy">
        <TextView
            android:id="@+id/profile_name"
            android:layout_below="@+id/profile_pic"
            style="@style/Input_fields"/>


        <TextView
            android:id="@+id/profile_mobile_no"
            android:layout_below="@+id/profile_name"
            style="@style/Input_fields"/>
    </LinearLayout>

</LinearLayout>
